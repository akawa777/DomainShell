@{
    ViewBag.Title = "bulk";
}

@section scripts{        
    <script type="text/javascript"> 
        require(["coco", "Person/tr", "text!templates/person/tr.check.html"], function (coco, tr, template) {
            var checkTr = coco.extend(tr, {
                node: template,
                checked: function () {
                    var self = this;
                    return self.$context('.target:checked').length > 0
                },
                check: function (checked) {
                    var self = this;                    
                    self.$context('.target').prop("checked", checked);
                }
            });

            coco.container.set("checkTr", checkTr);

            var bulk = {
                node: "#app",
                ready: function () {
                    var self = this;

                    var trViews = [];

                    $.get("/person/getall").success(function (persons) {
                        for (var id in persons) {
                            view = self.$coco({
                                model: "checkTr",
                                params: persons[id]
                            });

                            self.$context("table tbody").append(view.el);

                            trViews.push(view);
                        }
                    }).fail(function (result) {
                        self.$context(".message").html(result.responseText);
                    });

                    self.$context("[name=save]").on("click", function () {
                        var ids = [];

                        trViews.forEach(function (trView) {
                            if (trView.checked()) {
                                ids.push(this.Id);
                            }
                        });

                        if (ids.length == 0) {
                            self.$context(".message").text("no select target.");
                            return;
                        }

                        var name = context("input[name=name]").val();

                        if (name == "") {
                            self.$context(".message").text("no set name.");
                            return;
                        }

                        $.post("/person/bulkupdate", { ids: ids, name: name }).success(function (result) {
                            if (result.Success) {
                                location.href = "/person";
                            } else {
                                self.$context(".message").text("fail");
                            }
                        }).fail(function (result) {
                            self.$context(".message").html(result.responseText);
                        });
                    });

                    self.$context(".allTarget").on("click", function () {
                        var checked = $(this).is(':checked');

                        trViews.forEach(function (trView) {
                            trView.check(checked);
                        });
                    });
                }
            }

            var view = coco({
                model: bulk
            });

            $("#app").replaceWith(view.el);
        });
        
    </script>
}

<h2>bulk</h2>

<div id="app">
    <div class="message"></div>

    <a href="/person">list</a><br />
    <br />
    <form>
        <table>
            <thead>
                <tr>
                    <th><input class="allTarget" type="checkbox" /></th>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>                
            </tbody>
        </table>
        <br />
        <label for="name">name</label>
        <br />
        <input type="text" name="name" />
        <br />
        <br />
        <button name="save" type="button">save</button>
    </form>
</div>

