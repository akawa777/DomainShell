@{
    ViewBag.Title = "Home Page";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">  
        <a href="/home/new">new</a>      
        <table>
            <thead>
                <tr><th>id</th><th>name</th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr><td><a href="/home/detail/@item.Id">@item.Id</a></td><td>@item.Name</td></tr>
                }
            </tbody>
        </table>
    </div>    
</div>